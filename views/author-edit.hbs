<h2>Edit {{author.first_name}} {{author.last_name}}</h2>

<form action="/authors/{{author.id}}/edit" method="POST">
  <label for="first_name">First Name</label>
  <input id="first_name" name="first_name" value="{{author.first_name}}">
  <label for="last_name">Last Name</label>
  <input id="last_name" name="last_name" value="{{author.last_name}}">
  <label for="bio">Biography</label>
  <textarea name="bio">{{author.bio}}</textarea>
  <label for="portrait_url">Author Image URL</label>
  <input id="portrait_url" name="portrait_url" value="{{author.portrait_url}}">
  <input type="submit" value="Submit Updates">
</form>
